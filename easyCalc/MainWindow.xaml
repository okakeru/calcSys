<Window x:Class="easyCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:easyCalc"
        mc:Ignorable="d"
        Title="Windows版関数電卓" Height="800" Width="1150"
        ResizeMode="NoResize"
        IsVisibleChanged="Window_IsVisibleChanged">
    
    <Window.DataContext>
        <local:MainWindowData/>
    </Window.DataContext>
    <Window.Resources>
        <Style x:Key="OpenButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Aquamarine"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="HiddenButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Orange"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- アルカリ金属のボタン色定義 -->
        <Style x:Key="AlkaliMetalButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="LightSkyBlue"/>
        </Style>

        <!-- アルカリ土類金属のボタン色定義 -->
        <Style x:Key="AlkalineEarthMetalsButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="LightGreen"/>
        </Style>

        <!-- ハロゲンボタン色定義 -->
        <Style x:Key="HalogenButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Orange"/>
            <Setter Property="Foreground" Value="LightYellow"/>
        </Style>

        <!-- 希ガスボタン色定義 -->
        <Style x:Key="NobleGasButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="OrangeRed"/>
            <Setter Property="Foreground" Value="LightYellow"/>
        </Style>

        <!-- それ以外のボタン色定義 -->
        <Style x:Key="NormalButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
        </Style>
        
    </Window.Resources>
    
    <!-- メニューバー -->
    <Grid Name="windowGrid" Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="calcColumn" Width="450"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Name="periodicTableColumn" Width="625"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.ColumnSpan="2">
            <Menu FontFamily="Times New Roman">
                <MenuItem Name="fileMenu" Header="file">
                    <MenuItem Name="fileOpen" Header="open"/>
                    <MenuItem Name="fileSave" Header="save"/>
                </MenuItem>
                <MenuItem Name="buttonStyleMenu" Header="buttonStyle" Click="buttonStyle_Click"/>
                <MenuItem Name="languageMenu" Header="language" Click="language_Click"/>
            </Menu>
        </DockPanel>

        <!-- 画面拡大縮小ボタン -->
        <Grid Name="spreadWindow" Grid.Row="0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Button Name="shownPeriodicTable" Grid.Row="1" VerticalAlignment="Center" Width="25" Height="25" Click="showPeriodicTable_Click" ToolTip="shown periodic table" Style="{StaticResource OpenButtonStyle}">→</Button>
            <Button Name="hidePeriodicTable" Grid.Row="1" VerticalAlignment="Center" Width="25" Height="25" Click="hidePeriodicTable_Click" ToolTip="hide periodic table" Style="{StaticResource HiddenButtonStyle}">←</Button>
            <Button Name="shownHistory" Grid.Row="2" VerticalAlignment="Center" Width="25" Height="25" Click="shownHistory_Click" ToolTip="shown history" Style="{StaticResource OpenButtonStyle}">→</Button>
            <Button Name="hideHistory" Grid.Row="2" VerticalAlignment="Center" Width="25" Height="25" Click="hideHistory_Click" ToolTip="hide history table" Style="{StaticResource HiddenButtonStyle}">←</Button>
        </Grid>

        <!-- 画面左側 -->
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="500"/>
            </Grid.RowDefinitions>
            
            <!-- 計算式テキストボックス -->
            <Label Name="formula" Grid.Row="0" Height="30" Width="200" FontWeight="Bold" HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalAlignment="Bottom" FontFamily="Times New Roman">Formula</Label>
            <TextBox Grid.Row="1" Name="formulaText" Height="100" Width="400" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>

            <!-- 計算結果テキストボックス -->
            <Label Name="result" Grid.Row="2" Height="30" Width="200" FontWeight="Bold" HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalAlignment="Bottom" FontFamily="Times New Roman">Solution</Label>
            <TextBox Grid.Row="3" Name="resultText" Height="50" Width="400" VerticalAlignment="Center" IsReadOnly="True" VerticalContentAlignment="Center" FontSize="20"/>

            <!-- 入力ボタン部 -->
            <Grid Grid.Row="4" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                </Grid.ColumnDefinitions>
                
                <!-- 数字部 -->
                <Button Name="zero" Height="50" Width="50" FontSize="20" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="zero_Click" FontFamily="Times New Roman">0</Button>
                <Button Name="one" Height="50" Width="50" FontSize="20" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="one_Click" FontFamily="Times New Roman">1</Button>
                <Button Name="two" Height="50" Width="50" FontSize="20" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Click="two_Click" FontFamily="Times New Roman">2</Button>
                <Button Name="three" Height="50" Width="50" FontSize="20" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Click="three_Click" FontFamily="Times New Roman">3</Button>
                <Button Name="four" Height="50" Width="50" FontSize="20" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="four_Click" FontFamily="Times New Roman">4</Button>
                <Button Name="five" Height="50" Width="50" FontSize="20" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Click="five_Click" FontFamily="Times New Roman">5</Button>
                <Button Name="six" Height="50" Width="50" FontSize="20" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Click="six_Click" FontFamily="Times New Roman">6</Button>
                <Button Name="seven" Height="50" Width="50" FontSize="20" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="seven_Click" FontFamily="Times New Roman">7</Button>
                <Button Name="eight" Height="50" Width="50" FontSize="20" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Click="eight_Click" FontFamily="Times New Roman">8</Button>
                <Button Name="nine" Height="50" Width="50" FontSize="20" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Click="nine_Click" FontFamily="Times New Roman">9</Button>
                
                <!-- 記号部 -->
                <Button Name="commonLogarithm" Height="50" Width="50" FontSize="20" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="commonLogarithm_Click" ToolTip="common logarithm" FontFamily="Times New Roman">log</Button>
                <Button Name="naturalLogarithm" Height="50" Width="50" FontSize="20" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Click="naturalLogarithm_Click" ToolTip="natural logarithm" FontFamily="Times New Roman">ln</Button>
                <Button Name="sin" Height="50" Width="50" FontSize="20" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Click="sin_Click" ToolTip="sin" FontFamily="Times New Roman">sin</Button>
                <Button Name="cos" Height="50" Width="50" FontSize="20" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Click="cos_Click" ToolTip="cos" FontFamily="Times New Roman">cos</Button>
                <Button Name="tan" Height="50" Width="50" FontSize="20" Grid.Row="0" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Click="tan_Click" ToolTip="tan" FontFamily="Times New Roman">tan</Button>
                <Button Name="squareRoot" Height="50" Width="50" FontSize="20" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="squareRoot_Click" ToolTip="suare root" FontFamily="Times New Roman">√</Button>
                <Button Name="root" Height="50" Width="50" FontSize="20" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="root_Click" ToolTip="root" FontFamily="Times New Roman">n√</Button>
                <Button Name="negativeSign" Height="50" Width="50" FontSize="20" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Click="negativeSign_Click" ToolTip="negative sign" FontFamily="Times New Roman">(ー)</Button>

                <Button Name="period" Height="50" Width="50" FontSize="20" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Click="period_Click" FontFamily="Times New Roman">.</Button>
                <Button Name="exponential" Height="50" Width="50" FontSize="20" Grid.Row="6" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Click="exponential_Click" FontFamily="Times New Roman">^X</Button>
                <Button Name="allClear" Height="50" Width="50" FontSize="20" Grid.Row="3" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Click="allClear_Click" FontFamily="Times New Roman">AC</Button>
                <Button Name="clear" Height="50" Width="50" FontSize="20" Grid.Row="3" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Click="clear_Click" FontFamily="Times New Roman">C</Button>
                <Button Name="multiplication" Height="50" Width="50" FontSize="20" Grid.Row="4" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Click="multiplication_Click" FontFamily="Times New Roman">×</Button>
                <Button Name="division" Height="50" Width="50" FontSize="20" Grid.Row="4" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Click="division_Click" FontFamily="Times New Roman">÷</Button>
                <Button Name="plus" Height="50" Width="50" FontSize="20" Grid.Row="5" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Click="plus_Click" FontFamily="Times New Roman">＋</Button>
                <Button Name="minas" Height="50" Width="50" FontSize="20" Grid.Row="5" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Click="minas_Click" FontFamily="Times New Roman">－</Button>
                <Button Name="equal" Height="50" Width="50" FontSize="20" Grid.Row="6" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Click="equal_Click" FontFamily="Times New Roman">＝</Button>
            </Grid>
            
        </Grid>
        
        <!-- 画面右側 -->
        <Grid Name="PeriodicGrid" Grid.Row="0" Grid.Column="2" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            
            <!-- 周期表タイトル -->
            <TextBlock Name="periodicTable" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="35" Text="Periodic Table" VerticalAlignment="Center" Width="100" TextAlignment="Center" FontFamily="Times New Roman" FontWeight="Bold" FontSize="16"/>

            <Label Name="nameInMoleculesAtom1" Grid.Column="0" Grid.Row="2" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Times New Roman"></Label>
            <Label Name="nameInMoleculesAtom2" Grid.Column="4" Grid.Row="2" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Times New Roman"></Label>
            <Label Name="nameInMoleculesAtom3" Grid.Column="8" Grid.Row="2" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Times New Roman"></Label>
            <Label Name="nameInMoleculesAtom4" Grid.Column="12" Grid.Row="2" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Times New Roman"></Label>
            <Label Name="nameInMoleculesAtom5" Grid.Column="16" Grid.Row="2" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Times New Roman"></Label>
            <Label Name="nameInMoleculesAtom6" Grid.Column="20" Grid.Row="2" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Times New Roman"></Label>
            <Label Name="nameInMoleculesAtom7" Grid.Column="24" Grid.Row="2" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Times New Roman"></Label>
            <Label Name="nameInMoleculesAtom8" Grid.Column="28" Grid.Row="2" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Times New Roman"></Label>
            <Label Name="nameInMoleculesAtom9" Grid.Column="32" Grid.Row="2" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Times New Roman"></Label>

            <TextBox Name="valueInMoleculesAtom1" Grid.Column="2" Grid.Row="2" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Times New Roman" IsReadOnly="True"></TextBox>
            <TextBox Name="valueInMoleculesAtom2" Grid.Column="6" Grid.Row="2" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Times New Roman" IsReadOnly="True"></TextBox>
            <TextBox Name="valueInMoleculesAtom3" Grid.Column="10" Grid.Row="2" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Times New Roman" IsReadOnly="True"></TextBox>
            <TextBox Name="valueInMoleculesAtom4" Grid.Column="14" Grid.Row="2" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Times New Roman" IsReadOnly="True"></TextBox>
            <TextBox Name="valueInMoleculesAtom5" Grid.Column="18" Grid.Row="2" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Times New Roman" IsReadOnly="True"></TextBox>
            <TextBox Name="valueInMoleculesAtom6" Grid.Column="22" Grid.Row="2" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Times New Roman" IsReadOnly="True"></TextBox>
            <TextBox Name="valueInMoleculesAtom7" Grid.Column="26" Grid.Row="2" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Times New Roman" IsReadOnly="True"></TextBox>
            <TextBox Name="valueInMoleculesAtom8" Grid.Column="30" Grid.Row="2" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Times New Roman" IsReadOnly="True"></TextBox>
            <TextBox Name="valueInMoleculesAtom9" Grid.Column="34" Grid.Row="2" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Times New Roman" IsReadOnly="True"></TextBox>

            <TextBlock Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="12" Name="TotalAtomicMass" Text="Total atomic mass" VerticalAlignment="Center" HorizontalAlignment="Right" Width="150" TextAlignment="Center" FontFamily="Times New Roman" FontWeight="Bold" FontSize="16"/>
            <TextBox Name="totalAtomicMassText" Grid.Column="11" Grid.Row="3" Grid.ColumnSpan="10" Width="150" Height="40" IsReadOnly="True" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Times New Roman"/>
            <Button Name="copyAtomicMass" Grid.Column="22" Grid.Row="3" Grid.ColumnSpan="5" Width="70" Height="30" Click="copyAtomicMass_Click" ToolTip="Copy molecular weight." FontFamily="Times New Roman">Copy</Button>
            <Button Name="clearAtomicMass" Grid.Column="28" Grid.Row="3" Grid.ColumnSpan="5" Width="70" Height="30" Click="clearAtomicMass_Click" ToolTip="Delete number of atoms and molecular weight." FontFamily="Times New Roman">Clear</Button>

            <Button Name="btnHydrogen" Grid.Column="0" Grid.Row="4" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Hydrogen" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" Style="{StaticResource AlkaliMetalButtonStyle}" FontFamily="Times New Roman">H</Button>
            <Button Name="btnHelium" Grid.Column="36" Grid.Row="4" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Helium" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" Style="{StaticResource NobleGasButtonStyle}" FontFamily="Times New Roman">He</Button>

            <Button Name="btnLithium" Grid.Column="0" Grid.Row="5" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Lithium" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" Style="{StaticResource AlkaliMetalButtonStyle}" FontFamily="Times New Roman">Li</Button>
            <Button Name="btnBeryllium" Grid.Column="2" Grid.Row="5" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Beryllium" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" Style="{StaticResource AlkalineEarthMetalsButtonStyle}" FontFamily="Times New Roman">Be</Button>
            <Button Name="btnBoron" Grid.Column="24" Grid.Row="5" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Boron" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" FontFamily="Times New Roman">B</Button>
            <Button Name="btnCarbon" Grid.Column="26" Grid.Row="5" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Carbon" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" FontFamily="Times New Roman">C</Button>
            <Button Name="btnNitrogen" Grid.Column="28" Grid.Row="5" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Nitrogen" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" FontFamily="Times New Roman">N</Button>
            <Button Name="btnOxygen" Grid.Column="30" Grid.Row="5" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Oxygen" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" FontFamily="Times New Roman">O</Button>
            <Button Name="btnFluorine" Grid.Column="32" Grid.Row="5" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Fluorine" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" Style="{StaticResource HalogenButtonStyle}" FontFamily="Times New Roman">F</Button>
            <Button Name="btnNeon" Grid.Column="34" Grid.Row="5" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Neon" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" Style="{StaticResource NobleGasButtonStyle}" FontFamily="Times New Roman">Ne</Button>

            <Button Name="btnSodium" Grid.Column="0" Grid.Row="6" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Sodium" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" Style="{StaticResource AlkaliMetalButtonStyle}" FontFamily="Times New Roman">Na</Button>
            <Button Name="btnMagnesium" Grid.Column="2" Grid.Row="6" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Magnesium" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" Style="{StaticResource AlkalineEarthMetalsButtonStyle}" FontFamily="Times New Roman">Mg</Button>
            <Button Name="btnAluminium" Grid.Column="24" Grid.Row="6" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Aluminium" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" FontFamily="Times New Roman">Al</Button>
            <Button Name="btnSilicon" Grid.Column="26" Grid.Row="6" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Silicon" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" FontFamily="Times New Roman">Si</Button>
            <Button Name="btnPhosphorus" Grid.Column="28" Grid.Row="6" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Phosphorus" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" FontFamily="Times New Roman">P</Button>
            <Button Name="btnSulfur" Grid.Column="30" Grid.Row="6" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Sulfur" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" FontFamily="Times New Roman">S</Button>
            <Button Name="btnChlorine" Grid.Column="32" Grid.Row="6" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Chlorine" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" Style="{StaticResource HalogenButtonStyle}" FontFamily="Times New Roman">Cl</Button>
            <Button Name="btnArgon" Grid.Column="34" Grid.Row="6" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Argon" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" Style="{StaticResource NobleGasButtonStyle}" FontFamily="Times New Roman">Ar</Button>

            <Button Name="btnPotassium" Grid.Column="0" Grid.Row="7" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Potassium" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" Style="{StaticResource AlkaliMetalButtonStyle}" FontFamily="Times New Roman">K</Button>
            <Button Name="btnCalcium" Grid.Column="2" Grid.Row="7" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Calcium" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" Style="{StaticResource AlkalineEarthMetalsButtonStyle}" FontFamily="Times New Roman">Ca</Button>
            <Button Name="btnScandium" Grid.Column="4" Grid.Row="7" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Scandium" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" FontFamily="Times New Roman">Sc</Button>
            <Button Name="btnTitanium" Grid.Column="6" Grid.Row="7" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Titanium" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" FontFamily="Times New Roman">Ti</Button>
            <Button Name="btnVanadium" Grid.Column="8" Grid.Row="7" Width="30" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Vanadium" Click="clickOfAtom" MouseRightButtonDown="MouseRightButtonDown" FontFamily="Times New Roman">V</Button>
