<Window x:Class="easyCalc.language.language"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:easyCalc.language"
        mc:Ignorable="d"
        Title="language" Height="130" Width="300"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Name="mainText" Grid.Row="0" Content="Selected Language"/>
        <ComboBox Grid.Row="1" Name="selectLanguage" Width="200" Height="20">
            <ComboBoxItem Content="日本語(japanese)"/>
            <ComboBoxItem Content="英語(english)"/>
        </ComboBox>
        <Button Grid.Row="2" Name="select" Width="50" Height="20" Click="select_Click">decision</Button>
    </Grid>
</Window>
